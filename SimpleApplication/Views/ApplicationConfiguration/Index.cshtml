@model IEnumerable<SimpleApplication.Models.ApplicationConfiguration>

@{
    ViewData["Title"] = "Index";
}

<div class="card m-3">
<h1 class="m-3">Application Configuration</h1>

<p>
    <a class="btn btn-success w-25 m-3" asp-action="Create">Create New</a>
</p>
<div class="m-3">
<table  id="appConfigTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigurationDefinitionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigurationValue)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfigurationDefinitionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfigurationValue)
            </td>
            <td>
                <a class="btn btn-info text-white" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i></a>
                <a class="btn btn-secondary text-white" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-info-square"></i></a>
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
<script src="//code.jquery.com/jquery-3.5.1.js"></script>

<script>
    $(document).ready( function () {
    $('#appConfigTable').DataTable({
        "autoWidth": false
    });
    } );
</script>