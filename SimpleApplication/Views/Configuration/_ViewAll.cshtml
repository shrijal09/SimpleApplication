@model IEnumerable<Configuration>

<table id="configTable">
    <thead>
        <tr>
            <th>
                Config Name 
            </th>
            <th>
                Config Value
            </th>
            <th>
                Application
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ConfigName
            </td>
            <td>
                @item.ConfigValue
            </td>
            <td>
                @item.Application
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Configuration",new {id = item.Id},Context.Request.Scheme)','Edit Configuration')" class="btn btn-info text-white">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<link herf="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />   
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready( function () {
    $('#configTable').DataTable();
} );
</script>