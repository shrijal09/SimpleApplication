@model IEnumerable<Configuration>

<table id="configTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Config Name 
            </th>
            <th>
                Config Value
            </th>
            <th>
                Application
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ConfigName
            </td>
            <td>
                @item.ConfigValue
            </td>
            <td>
                @item.Application
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Configuration",new {id = item.Id},Context.Request.Scheme)','Edit Configuration')" class="btn btn-info text-white">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary text-white">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="//code.jquery.com/jquery-3.5.1.js"></script>

<script>
    $(document).ready( function () {
    $('#configTable').DataTable();
    } );
</script>
